<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/main.css">
    <title>booksite</title>
</head>
<body>
    <div class="main">
        <h1>MY BOOKS</h1>
        <a href="/#" class="newBook">New</a>
        <hr>
        <% contents.forEach((content) => { %>
            <div class="container">
                <div class="img"></div>
                <h2 class="title"><%= content.title %></h2>
                <p class="content"><%= content.content %></p>
                <h3>Rating: <%= content.rating %></h3>
                <h3>Date: <%= new Date(content.recent).toISOString().split('T')[0] %></h3>
                <form method="post">
                    <button class="delete" type="submit" formaction="/delete/<%= content.id %>">Delete</button>
                    <button class="edit" type="submit" formaction="/edit/<%= content.id %>">Edit</button>
                </form>
                <hr>
            </div>
        <% }); %>
        
    </div>
</body>
</html>